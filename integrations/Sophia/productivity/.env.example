# Sophia Productivity Module Configuration

# Google Calendar
GOOGLE_CALENDAR_CREDENTIALS=path/to/credentials.json
GOOGLE_CALENDAR_IDS=primary,work@company.com

# Todoist
TODOIST_API_TOKEN=your_todoist_token_here

# Notion
NOTION_API_KEY=your_notion_key_here
NOTION_DATABASE_ID=your_database_id_here

# ntfy (Notifications)
NTFY_URL=https://ntfy.sh/your-topic
# Or self-hosted: http://your-server:80/your-topic

# LifeOps Connection
LIFEOPS_DB_PATH=../data/life_timeline.db
LIFEOPS_API_URL=http://localhost:8081
LIFEOPS_USER_ID=main_user

# Sync Service
SYNC_SERVICE_PORT=8082
SYNC_SERVICE_HOST=0.0.0.0
SYNC_INTERVAL_MINUTES=15
ENABLE_BIDIRECTIONAL_SYNC=true

# Sync Cache
SYNC_CACHE_PATH=data/sync_cache.db

# AGI Features
ENABLE_AGI_INSIGHTS=true

# Suggestion Settings
MIN_GAP_MINUTES=25
MAX_SUGGESTIONS_PER_DAY=10
QUIET_HOURS_START=22:00
QUIET_HOURS_END=08:00
